<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="100" y="60" z="100" />
            <to x="-30" y="0" z="-50" />
        </perspective>

        <ortho id="orthoCamera"  near="0.2" far="400" left="-50" right="50" top="20" bottom="20" >
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
            <up x="0" y="2" z="0" /> 
        </ortho>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="omniLight" enabled="1">
            <location x="-20" y="50" z="-20" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <spot id="spotLight" enabled="1" angle="45" exponent="10">
            <location x="10" y="10" z="10" w="10" />
            <target x="0" y="0" z="0" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="0.5" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </spot>
    </lights>

    <textures>
        <texture id="grass" file="scenes/images/grass.jpg" />
        <texture id="wood" file="scenes/images/wood.jpg" />
        <texture id="roof" file="scenes/images/roof.jpg" />
        
    </textures>

    <materials>
        <material id="material" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="transform1">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="unitSquare">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="triangle">
            <triangle   x1="-0.5" y1="0" z1="0" 
                        x2="0.5" y2="0" z2="0"
                        x3="0" y3="1" z3="0"/>
        </primitive>
        <primitive id="tableLeg">
            <cylinder base="1" top="0.6" height="8" slices="15" stacks="15" />
        </primitive>
        <primitive id="treeTrunk">
            <cylinder base="4" top="2" height="30" slices="15" stacks="15" />
        </primitive>
        <primitive id="basicCylinder">
            <cylinder base="0.5" top="0.5" height="1" slices="15" stacks="15" />
        </primitive>
        <primitive id="treeBush">
            <sphere radius="18" slices="5" stacks="5" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="10" stacks="10" />
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="5" slices="20" loops="20" />
        </primitive>
    </primitives>

