<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="50" y="50" z="50" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <ortho id="orthoCamera"  near="0.2" far="400" left="50" right="50" top="20" bottom="20" >
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
            <up x="0" y="2" z="0" /> 
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="omniLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <spot id="spotLight" enabled="1" angle="45" exponent="10">
            <location x="10" y="10" z="10" w="10" />
            <target x="0" y="0" z="0" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="0.5" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </spot>
    </lights>

    <textures>
        <texture id="texture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="material" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="transform1">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-5" y1="-10" x2="5" y2="10" />
        </primitive>
        <primitive id="triangle">
            <triangle   x1="-1" y1="0" z1="0" 
                        x2="1" y2="0" z2="0"
                        x3="0" y3="2" z3="0"/>
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="0.6" height="15" slices="15" stacks="15" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="5" stacks="4" />
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="5" slices="10" loops="10" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <componentref id="leg1" />
                <componentref id="leg2" />
                <componentref id="leg3" />
                <componentref id="leg4" />
                <componentref id="tabletopBase" />
                <componentref id="tabletopTop" />
                <componentref id="tabletopSide1" />
                <componentref id="tabletopSide2" />
                <componentref id="tabletopSide3" />
                <componentref id="tabletopSide4" />
            </children>
        </component>

        <component id="leg1">
            <transformation>
                <translate x="15" y="0" z="30" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="leg2">
            <transformation>
                <translate x="-15" y="0" z="30" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="leg3">
            <transformation>
                <translate x="15" y="0" z="-30" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="leg4">
            <transformation>
                <translate x="-15" y="0" z="-30" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="tabletopBase">
            <transformation>
                <translate x="0" y="15" z="0" />
                <rotate axis="x" angle="90" />
                <scale x="4" y="3.5" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="tabletopTop">
            <transformation>
                <translate x="0" y="17" z="0" />
                <rotate axis="x" angle="-90" />
                <scale x="4" y="3.5" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="tabletopSide1">
            <transformation>
                <translate x="20" y="16" z="0" />
                <rotate axis="y" angle="90" />
                <scale x="7" y="0.1" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="tabletopSide2">
            <transformation>
                <translate x="-20" y="16" z="0" />
                <rotate axis="y" angle="-90" />
                <scale x="7" y="0.1" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="tabletopSide3">
            <transformation>
                <translate x="0" y="16" z="35" />
                <scale x="4" y="0.1" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="tabletopSide4">
            <transformation>
                <translate x="0" y="16" z="-35" />
                <rotate axis="y" angle="180" />
                <scale x="4" y="0.1" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="spherePrinter">
            <transformation>
                <translate x="-15" y="15" z="-15" />
                <scale x="3" y="3" z="3" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>

        <component id="trianglePrinter">
            <transformation>
                <translate x="-10" y="10" z="10" />
                <scale x="10" y="10" z="10" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>

        <component id="cylinderPrinter">
            <transformation>
                <translate x="0" y="10" z="0" /> 
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>
    </components>
</lxs>