<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="70" y="70" z="70" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <ortho id="orthoCamera"  near="0.2" far="400" left="50" right="50" top="20" bottom="20" >
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
            <up x="0" y="2" z="0" /> 
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="omniLight" enabled="1">
            <location x="-20" y="50" z="-20" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <spot id="spotLight" enabled="1" angle="45" exponent="10">
            <location x="10" y="10" z="10" w="10" />
            <target x="0" y="0" z="0" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="0.5" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </spot>
    </lights>

    <textures>
        <texture id="texture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="material" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="transform1">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="unitSquare">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="triangle">
            <triangle   x1="-1" y1="0" z1="0" 
                        x2="1" y2="0" z2="0"
                        x3="0" y3="2" z3="0"/>
        </primitive>
        <primitive id="tableLeg">
            <cylinder base="1" top="0.6" height="8" slices="15" stacks="15" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="5" stacks="4" />
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="5" slices="10" loops="10" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <componentref id="ground" />
                <componentref id="table" />
                <componentref id="chair" />
            </children>
        </component>

        <component id="ground">
            <transformation>
                <scale x="30" y="30" z="30" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="unitSquare" />
            </children>
        </component>

        <component id="chair">
            <transformation>
                <translate x="0" y="0" z="10" />
                <scale x="1" y="1.2" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>  
                <componentref id="chairBase" />
                <componentref id="chairBack" />
                <componentref id="chairLeg1" />
                <componentref id="chairLeg2" />
                <componentref id="chairLeg3" />
                <componentref id="chairLeg4" />
            </children>
        </component>

        <component id="chairBack">
            <transformation>
                <translate x="0" y="7" z="2.5" />
                <rotate axis="x" angle="-90"/>
                <scale x="5" y="1.2" z="5" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        <component id="chairBase">
            <transformation>
                <translate x="0" y="4" z="0" />
                <scale x="5" y="1" z="5" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        <component id="chairLeg1">
            <transformation>
                <translate x="2" y="0" z="2" />
                <scale x="1" y="4" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        <component id="chairLeg2">
            <transformation>
                <translate x="-2" y="0" z="2" />
                <scale x="1" y="4" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        <component id="chairLeg3">
            <transformation>
                <translate x="2" y="0" z="-2" />
                <scale x="1" y="4" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        <component id="chairLeg4">
            <transformation>
                <translate x="-2" y="0" z="-2" />
                <scale x="1" y="4" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        <component id="table">
            <transformation>
                <scale x="1.5" y="1" z="1" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <componentref id="tableBase" />
                <componentref id="tableLeg1" />
                <componentref id="tableLeg2" />
                <componentref id="tableLeg3" />
                <componentref id="tableLeg4" />
            </children>
        </component>

        <component id="tableBase">
            <transformation>
                <translate x="0" y="8" z="0" />
                <scale x="20" y="1" z="20" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        <component id="tableLeg1">
            <transformation>
                <translate x="8" y="0" z="8" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="tableLeg2">
            <transformation>
                <translate x="-8" y="0" z="8" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="tableLeg3">
            <transformation>
                <translate x="8" y="0" z="-8" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="tableLeg4">
            <transformation>
                <translate x="-8" y="0" z="-8" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="unitCube">
            <transformation>
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <componentref id="cubeBase" />
                <componentref id="cubeTop" />
                <componentref id="cubeSide1" />
                <componentref id="cubeSide2" />
                <componentref id="cubeSide3" />
                <componentref id="cubeSide4" />
            </children>
        </component>

        <component id="cubeBase">
            <transformation> 
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="unitSquare" />
            </children>
        </component>

        <component id="cubeTop">
            <transformation>
                <translate x="0" y="1" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="unitSquare" />
            </children>
        </component>

        <component id="cubeSide1">
            <transformation>
                <translate x="0.5" y="0.5" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="unitSquare" />
            </children>
        </component>

        <component id="cubeSide2">
            <transformation>
                <translate x="-0.5" y="0.5" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="unitSquare" />
            </children>
        </component>

        <component id="cubeSide3">
            <transformation>
                <translate x="0" y="0.5" z="-0.5" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="unitSquare" />
            </children>
        </component>

        <component id="cubeSide4">
            <transformation>
                <translate x="0" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="unitSquare" />
            </children>
        </component>

        <component id="spherePrinter">
            <transformation>
                <translate x="-15" y="15" z="-15" />
                <scale x="3" y="3" z="3" />
            </transformation>
            <materials>
                <material id="material" />
            </materials>
            <texture id="texture"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
    </components>
</lxs>